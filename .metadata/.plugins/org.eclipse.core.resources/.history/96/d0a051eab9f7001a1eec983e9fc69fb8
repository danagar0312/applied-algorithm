//		int[] ar2 = new int[] {40,10,10,15,40,20,-100};
//		findElement(ar1,ar2);
		
		  File file = new File("C:\\Users\\18126\\Downloads\\rosalind_bins.txt"); 
		  BufferedReader br = new BufferedReader(new FileReader(file)); 
