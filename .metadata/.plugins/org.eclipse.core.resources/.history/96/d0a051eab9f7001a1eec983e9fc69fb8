			int count = 0 ;
			  	for(int i = 0; i < strArray.length; i++) {
				      intArray[i] = Integer.parseInt(strArray[i]);
				      count++;
				  }
		  	
			 System.out.println(Arrays.toString(intArray));
			 System.out.println(intArray.length); 
			 System.out.println(count); 
//			 System.out.println("helloooooo"); 
