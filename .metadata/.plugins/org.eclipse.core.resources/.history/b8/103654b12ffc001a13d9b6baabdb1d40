 package Sorting;

public class IntersectionandUnion {

	static void printIntersection(int[] arr1, int[] arr2, int m, int n) {
		int i = 0, j = 0;
		while(i < m && j < n) {
//			System.out.println("i" + i);
			if ( i >= 1 && (arr1[i] == arr1[i-1])) {
				i++;
				continue;
			}
			if(arr1[i] < arr2[j]) {
				i++;
			}
			else if(arr1[i] > arr2[j]) {
				j++;
			}
			else {
				System.out.println(arr1[i] + " ");
				i++;
				j++; // if arr1 and arr2 elements are same 
			}
		}
	}
	
	static void printIntersection1(int[] arr1, int[] arr2, int m, int n) {
		int i = 0, j = 0;
		while(i < m && j < n) {
			if ( i >= 1 && (arr1[i] == arr1[i-1])) {
				i++;
				continue;
			}
			if ( j >= 1 && (arr1[j] == arr1[j-1])) {
				j++;
				continue;
			}
			if(arr1[i] < arr2[j]) {
				i++;
			}
			else if(arr1[i] > arr2[j]) {
				j++;
			}
			else {
				System.out.println(arr1[i] + " ");
				i++;
				j++; // if arr1 and arr2 elements are same 
			}
			while(i < m) {
				if(i == 0 && arr1[i] == arr1[i-1]){
					i++;
				}
			}
			while(j < n) {
				if(i == 0 && arr1[j] == arr1[j-1]){
					j++;
				}
			}
			
		}
		
	}
	public static void main(String args[]) 
    { 
		int[] arr1 = {1, 2, 2, 3, 4};
		int[] arr2 = {2, 2, 4, 6, 7, 8};
        int m = arr1.length; 
        int n = arr2.length; 
        printIntersection(arr1, arr2, m, n); 
    } 
}
